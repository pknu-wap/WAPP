name: Released-App-Distribution
on:
  push:
    branches:
      - 'release/**'

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v3
      - name: set up JDK 17
        uses: actions/setup-java@v3
        with:
          java-version: 17
          distribution: zulu
          cache: gradle

      - name: add google-services.json
        run: echo '${{ secrets.GOOGLE_SERVICES_JSON }}' > ./app/google-services.json

      - name: add local.properties
        run: |
          echo api_key=\"${{ secrets.API_KEY }}\" >> ./local.properties
        
      - name: Grant execute permission for gradlew
        run: chmod +x gradlew
        
      - name: Build with Gradle
        run: ./gradlew build

      - name: Build release AAB
        run: ./gradlew bundleRelease

      - name: Sign AAB
        id: sign_app
        uses: r0adkll/sign-android-release@v1
        with:
          releaseDirectory: app/build/outputs/bundle/release
          signingKeyBase64: ${{ secrets.KEY_BASE_64_RELEASE }}
          alias: ${{ secrets.KEY_ALIAS }}
          keyStorePassword: ${{ secrets.KEYSTORE_PASSWORD }}
          keyPassword: ${{ secrets.KEY_PASSWORD }}

      - name: upload artifact to Firebase App Distribution
        uses: wzieba/Firebase-Distribution-Github-Action@v1
        with:
          appId: ${{secrets.FIREBASE_APP_ID}}
          serviceCredentialsFileContent: ${{ secrets.CREDENTIAL_FILE_CONTENT }}
          groups: WAPP_QA
          file: app/build/outputs/bundle/release/app-release.aab
        
      - name: Send Success Message
        if: ${{ success() }}
        uses: Ilshidur/action-discord@0.3.2
        env:
          DISCORD_WEBHOOK: ${{ secrets.DISCORD_WEBHOOK }}
          DISCORD_USERNAME: WAPP_BOT
          DISCORD_AVATAR: https://github.com/pknu-wap/WAPP/blob/main/image/icon.png?raw=true
          DISCORD_EMBEDS: |
            [
              { 
                "author": {
                  "name": "WAPP Release",
                  "url": "https://github.com/pknu-wap/WAPP/blob/main/image/icon.png?raw=true",
                },
                "title": "ë¦´ë¦¬ì¦ˆ ì„±ê³µ, ì ë‘ ê³¼ ì ~ ğŸ”¥ğŸ”¥",
                "color": 10478271,
                "description": "ë©”ì¼ì— ìƒˆë¡œìš´ ë¦´ë¦¬ì¦ˆ ì•± ë°°ì†¡ì™„ë£Œí–ˆì–´ìš”!",
              }
            ]
            
      - name: Send Failure Message
        if: ${{ failure() }}
        uses: Ilshidur/action-discord@0.3.2
        env:
          DISCORD_WEBHOOK: ${{ secrets.DISCORD_WEBHOOK }}
          DISCORD_USERNAME: WAPP_BOT
          DISCORD_AVATAR: https://github.com/pknu-wap/WAPP/blob/main/image/icon.png?raw=true
          DISCORD_EMBEDS: |
            [
              { 
                "author": {
                  "name": "WAPP Release",
                  "url": "https://github.com/pknu-wap/WAPP/blob/main/image/icon.png?raw=true",
                },
                "title": "ë¦´ë¦¬ì¦ˆ ì‹¤íŒ¨, ëˆ„ê°€ ì´ë ‡ê²Œ í•˜ë˜. ğŸ¤¬ğŸ¤¬",
                "color": 13458524,
                "description": "ë‹¤ì‹œ ë¦´ë¦¬ì¦ˆ í•´ì˜¤ì„¸ìš”. ì‚ë¹…",
              }
            ]
